{
  "name": "cascade-hardware-monitor",
  "version": "1.0.0",
  "description": "Comprehensive PC hardware monitoring system with API access",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "electron": "electron .",
    "electron:dev": "tsx src/electron/main.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}"
  },
  "keywords": [
    "hardware",
    "monitoring",
    "system",
    "api",
    "pc"
  ],
  "author": "Cascade AI",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "electron": "^29.0.0",
    "electron-store": "^9.0.0",
    "express": "^5.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "node-cron": "^3.0.3",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "rate-limiter-flexible": "^5.0.0",
    "systeminformation": "^5.22.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-notifier": "^8.0.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
