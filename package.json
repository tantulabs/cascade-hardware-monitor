{
  "name": "cascade-hardware-monitor",
  "version": "1.0.0",
  "description": "Comprehensive PC hardware monitoring system with API access",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "electron": "electron .",
    "electron:dev": "tsx src/electron/main.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "hardware",
    "monitoring",
    "system",
    "api",
    "pc"
  ],
  "author": {
    "name": "TantuLabs",
    "email": "contact@tantulabs.com"
  },
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "electron-store": "^9.0.0",
    "express": "^5.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "node-cron": "^3.0.3",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "rate-limiter-flexible": "^5.0.0",
    "systeminformation": "^5.22.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-notifier": "^8.0.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "build": {
    "appId": "com.tantulabs.cascade-hardware-monitor",
    "productName": "Cascade Hardware Monitor",
    "copyright": "Copyright Â© 2026 TantuLabs",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "config/**/*",
      "plugins/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
